<script>
      // Scrolls to the selected menu item on the page
      $(function() {
	      $('a[href*=#]:not([href=#])').click(function() {
	          if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') || location.hostname == this.hostname) {

	              var target = $(this.hash);
	              target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
	              if (target.length) {
	                  $('html,body').animate({
	                      scrollTop: target.offset().top -80
	                  }, 1000);
	                  // return false;
	              }
	          }
	      });

	      $('#contacto form').submit(function(){
              $('#errorFormulario').addClass('hidden');
              $('#okFormulario').addClass('hidden');
              $('#enviandoFormulario').removeClass('hidden');
              $('#faltanDatosFormulario').addClass('hidden');

              var email = $('#message_email').val();
              if(email){
                $.ajax({
                  type: "POST",
                  url: $(this).attr('action'),
                  data: $(this).serialize(),
                  dataType: 'json'
                }).done(function(json) {
                    if (json.ok){
                        $('#enviandoFormulario').addClass('hidden');
                        $('#okFormulario').removeClass('hidden');
                    }else{
                        $('#enviandoFormulario').addClass('hidden');
                        $('#errorFormulario').removeClass('hidden');
                    }
                  }).fail(function( jqXHR, textStatus, errorThrown){
                        $('#enviandoFormulario').addClass('hidden');
                        $('#errorFormulario').removeClass('hidden');
                  });
              } else {
                $('#errorFormulario').addClass('hidden');
                $('#okFormulario').addClass('hidden');
                $('#enviandoFormulario').addClass('hidden');
                $('#faltanDatosFormulario').removeClass('hidden');
              }
              return false;
          });
	  });
</script>

